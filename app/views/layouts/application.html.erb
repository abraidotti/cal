<!DOCTYPE html>
<html>
  <head>
    <title>Trippin</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "http://maps.google.com/maps/api/js?v=3key=&libraries=places" %>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <!-- only if you need custom infoboxes -->
  </head>

  <nav class="navbar">
    <div>
      <%= link_to calendars_index_path do %>
      <%= image_tag "logo_small_black.png" %>
    <% end %>
  </div>
  <div class="navlinks">
    <% if user_signed_in? %>
      <p>Logged in as:
        <%= link_to "/users/show/#{current_user.id}" do %>
        <%= current_user.fname %>
        <%= current_user.lname %>
        <% end %>
        <p>

          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
          |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
          |
          <%= link_to "Calendar", "/" %>
          |
          <%= link_to "New Event", new_event_path %>
          |
          <%= link_to "New Trip", new_trip_path %>
          |
          <%= link_to "All Events", events_path %>
          |
          <%= link_to "Trips", trips_path %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link' %>
          |
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link' %>
        </div>

      <% end %>
    </nav>

    <body>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </body>
    <script type="text/javascript">
      handler = Gmaps.build('Google');
      handler.buildMap({
        provider: {},
        internal: {
          id: 'map'
        }
      }, function () {
        markers = handler.addMarkers(<%=raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(12);
      });
    </script>

  </html>
