<h1>Today's events</h1>

  <% @events.each do |event| %>
    <% if @date.gsub(/\D+/, '').between?(event.start_time.to_date.to_s.gsub(/\D+/, ''),event.end_time.to_date.to_s.gsub(/\D+/, '')) %>
      <p><%= link_to event.name, event_path(event) %>: <%= event.description %></p>
    <% end %>
  <% end %>
