<div class="new-trip-box">
  <h1>Edit a Trip</h1>

  <% if current_user.id == @trip.user_id %>
    <%= form_with(model: @trip, local:true) do |f| %>
    <br>
    <%= f.label "Name: ", class: 'form-label' %>
    <%= f.text_field :name %>
    <br>
    <%= f.label "Description: ", class: 'form-label' %>
    <%= f.text_field :description %>
    <br>
    <%= f.label "Start time", class: 'form-label' %>
    <%= f.datetime_select :start_time, ampm: true %>
    <br>
    <%= f.label "End time", class: 'form-label' %>
    <%= f.datetime_select :end_time, ampm: true %>
    <br>
    <%= f.submit %>
  <% end %>
<% end %>
</div>
