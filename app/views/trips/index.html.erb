<div class="container">
  <div class="row">
    <div class="one-half column" style="margin-top: 1%">
      <h1>My Trips</h1>
      <ul style="list-style: none;">
        <% @mytrips.each do |trip| %>
          <li>
            <a href="/trips/<%= trip.id%>"><%= trip.name %></a>
            | Duration:
            <%= distance_of_time_in_words(trip.duration.hour) %>
          </li>
        <% end %>
      </ul>
      <h1>All trips</h1>
      <ul style="list-style: none;">
        <% @alltrips.each do |trip| %>
          <li>
            <a href="/trips/<%= trip.id%>"><%= trip.name %></a>
            |
            <%= trip.description %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="one-half column" style="margin-top: 1%">

      <%= form_with(model: Trip.new, local:true) do |f| %>
      <h1>Add a Trip</h1>
      <%= f.label "Name: ", class: 'form-label' %>
      <%= f.text_field :name %>
      <br>
      <%= f.label "Description: ", class: 'form-label' %>
      <%= f.text_field :description %>
      <br>
      <%= f.label "Start time", class: 'form-label' %>
      <%= f.datetime_select :start_time, :default => Time.now, ampm: true %>
      <br>
      <%= f.label "End time", class: 'form-label' %>
      <%= f.datetime_select :end_time, :default => Time.now, ampm: true %>
      <br>
      <%= f.submit %>
    <% end %>

    </div>
  </div>
</div>
